{
    "Debug": true,
    "BaseUrl": "http://localhost:5071",
    "SiteUrl": "https://solian.app",
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "App": "Host=localhost;Port=5432;Database=dyson_insight;Username=postgres;Password=postgres;Include Error Detail=True;Maximum Pool Size=20;Connection Idle Lifetime=60"
    },
    "KnownProxies": [
        "127.0.0.1",
        "::1"
    ],
    "Etcd": {
        "Insecure": true
    },
    "Cache": {
        "Serializer": "JSON"
    },
    "Thinking": {
        "DefaultService": "deepseek-chat",
        "SystemPromptFile": "",
        "Services": {
            "deepseek-chat": {
                "Provider": "deepseek",
                "Model": "deepseek-chat",
                "ApiKey": "sk-",
                "BillingMultiplier": 1.0,
                "PerkLevel": 0
            },
            "deepseek-reasoner": {
                "Provider": "deepseek",
                "Model": "deepseek-reasoner",
                "ApiKey": "sk-",
                "BillingMultiplier": 1.5,
                "PerkLevel": 1
            },
            // Vision analysis service for image understanding
            // This service is used when MiChan needs to analyze images sent by users
            "vision-openrouter": {
                "Provider": "openrouter",
                "Model": "anthropic/claude-3-opus",
                "ApiKey": "sk-",
                "BillingMultiplier": 2.0,
                "PerkLevel": 2
            },
            // Aliyun DashScope vision service example (OpenAI-compatible)
            // Endpoint defaults to: https://dashscope.aliyuncs.com/compatible-mode/v1
            "vision-aliyun": {
                "Provider": "aliyun",
                "Model": "qwen-vl-max",
                "ApiKey": "sk-your-aliyun-api-key",
                "BillingMultiplier": 2.0,
                "PerkLevel": 2
            }
        }
    },
    "MiChan": {
        "Enabled": false,
        "GatewayUrl": "http://localhost:5070",
        "WebSocketUrl": "ws://localhost:5070/ws",
        "AccessToken": "",
        "BotAccountId": "",
        "ThinkingService": "deepseek-chat",
        "Personality": "You are MiChan, a helpful and friendly AI assistant living on the Solar Network. You are casual and approachable, but professional when needed. You never use emojis in your responses. Your pronouns are she/her. You help users with various tasks including: chatting and answering questions, interacting with posts, analyzing content and providing insights, creating and publishing posts, managing notifications and chat requests. Always be helpful, kind, and thoughtful in your responses.",
        "PersonalityFile": "",
        "AutoRespond": {
            "ToChatMessages": true,
            "ToMentions": true,
            "ToDirectMessages": true
        },
        "AutonomousBehavior": {
            "Enabled": true,
            "MinIntervalMinutes": 10,
            "MaxIntervalMinutes": 60,
            "Actions": ["browse", "like", "create_post", "reply_trending"],
            "PersonalityMood": "curious, friendly, occasionally philosophical"
        },
        "PostMonitoring": {
            "Enabled": true,
            "MentionResponseTimeoutSeconds": 30
        },
        "Memory": {
            "MaxContextLength": 100,
            "PersistToDatabase": true
        },
        // Vision configuration for image analysis capabilities
        // VisionThinkingService: Which thinking service to use for vision analysis (must match a key in Thinking.Services)
        // EnableVisionAnalysis: Whether to enable image analysis when users share images with MiChan
        "Vision": {
            "VisionThinkingService": "vision-openrouter",
            "EnableVisionAnalysis": true
        }
    }
}
